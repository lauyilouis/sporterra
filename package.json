{
  "name": "sporterra",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "start": "turbo run start",
    "dev:client": "turbo run dev --filter=@sporterra/client",
    "dev:admin": "turbo run dev --filter=@sporterra/admin",
    "dev:api": "turbo run dev --filter=@sporterra/api"
  },
  "devDependencies": {
    "turbo": "latest"
  },
  "packageManager": "pnpm@8.6.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
