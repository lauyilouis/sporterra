{
  "name": "@sporterra/api",
  "version": "1.0.0",
  "description": "Sporterra API server",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "docker:build": "docker build -t sporterra-api .",
    "docker:run": "docker run -p 3001:3001 sporterra-api",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:push": "tsx src/db/migrate.ts"
  },
  "keywords": [
    "api",
    "fastify",
    "sporterra"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fastify/cors": "^11.0.1",
    "@fastify/helmet": "^13.0.1",
    "bcryptjs": "^3.0.2",
    "dotenv": "^17.2.0",
    "drizzle-orm": "0.44.3",
    "fastify": "^5.4.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.1.0",
    "@types/pg": "^8.15.4",
    "drizzle-kit": "0.31.4",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  }
}
